<Page x:Class="Magma.HomeStatus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magma"
      xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"  
      mc:Ignorable="d" 
      d:DesignHeight="58" d:DesignWidth="468"
      Title="HomeStatus">

    <Grid>
        <Label x:Name="StatusLabel" Foreground="{DynamicResource TextLightBrush}" Content="What are you looking to do?" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="28" FontWeight="Regular" FontFamily="{StaticResource QuickSand}"/>
    </Grid>
</Page>
