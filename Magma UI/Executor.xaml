<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magma"
      xmlns:Avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Name="ExecutorPage" x:Class="Magma.Executor"
      mc:Ignorable="d" 
      d:DesignHeight="336" d:DesignWidth="686"
      Title="Executor" Initialized="ExecutorPage_Initialized" SizeChanged="ExecutorPage_SizeChanged">
    <Grid x:Name="ExecutorGrid" Background="#00282A2F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Avalon:TextEditor  Grid.Column="0" Margin="10, 10, 1, 0" FontSize="12" FontFamily="{StaticResource JBMono}" x:Name="ScriptTextBox" ShowLineNumbers="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="{x:Null}" LineNumbersForeground="#2FFFFFFF" Foreground="#999999" TextChanged="ScriptTextBox_TextChanged" KeyDown="ScriptTextBox_KeyDown" KeyUp="ScriptTextBox_KeyUp" />

        <Grid Grid.Column="1" Background="#33000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="24" FontWeight="Light" FontFamily="{StaticResource QuickSand}" Content="Scripts" HorizontalAlignment="Stretch" Margin="15,10,15,10" BorderThickness="0 0 0 1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch">
                <Label.BorderBrush>
                    <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                        <GradientStop Color="#00000000"/>
                        <GradientStop Color="#BFE4E8F0" Offset="0.35"/>
                        <GradientStop Color="#BFE4E8F0" Offset="0.65"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Label.BorderBrush>
            </Label>
            <ListBox x:Name="ScriptsListBox" Grid.Row="1" Padding="8,0,8,8" FontSize="12"  Margin="0" BorderThickness="0" Background="{x:Null}" BorderBrush="{x:Null}">
                <ListBoxItem Content="1.) infinite yeild.lua" >
                    <ListBoxItem.Background>
                        <SolidColorBrush Color="{DynamicResource MagmaOrange}"/>
                    </ListBoxItem.Background>
                </ListBoxItem>
            </ListBox>

        </Grid>
    </Grid>
</Page>
