<Window x:Class="Magma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magma"
        xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="#01000000"
        Title="MainWindow" Height="400" Width="800" BorderThickness="0" Initialized="Window_Initialized" Loaded="Window_Loaded">
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
            <GradientStop Color="{DynamicResource GradientLight}"/>
            <GradientStop Color="{DynamicResource GradientDark}" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid>
        <Grid x:Name="Background">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource WindowTint}"/>
            </Grid.Background>
            <Rectangle x:Name="RightAccentPanel" Fill="#282C34" Width="650" VerticalAlignment="Stretch" HorizontalAlignment="Right"/>
        </Grid>
        <Grid x:Name="Foreground">
            <Image x:Name="Logo" Source="Images/Magma.png" Width="48" Height="48" Margin="126,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Grid x:Name="RightPanel" Width="650" VerticalAlignment="Stretch" HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="58"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <Border Grid.ColumnSpan="2" Grid.Column="1" x:Name="DragBar" CornerRadius="0 0 0 7" Height="12" Width="608" VerticalAlignment="Top" HorizontalAlignment="Right" MouseDown="DragBar_MouseDown">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="{DynamicResource GradientLight}"/>
                            <GradientStop Color="{DynamicResource GradientDark}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border x:Name="WindowControlsContainer" Grid.Row="1" Grid.Column="2" Width="120" Height="35" CornerRadius="7">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource BackgroundContrast}"/>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Background="{x:Null}" Padding="0" Height="22" Width="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource TextLight}"/>
                            </Button.Foreground>
                            <m:PackIcon Kind="Pin" Width="16" Height="16" VerticalAlignment="Center" Margin=" 0 0"></m:PackIcon>
                        </Button>
                        <Button Grid.Column="1" Background="{x:Null}" Padding="0" Height="22" Width="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource TextLight}"/>
                            </Button.Foreground>
                            <m:PackIcon Kind="ArrowDownThick" Width="20" Height="20" VerticalAlignment="Center" Margin=" 0 0"></m:PackIcon>
                        </Button>
                        <Button Grid.Column="2" Background="{x:Null}" Padding="0" Height="22" Width="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource TextLight}"/>
                            </Button.Foreground>
                            <m:PackIcon Kind="CloseThick" Width="20" Height="20" VerticalAlignment="Center" Margin=" 0 0"></m:PackIcon>
                        </Button>
                    </Grid>
                </Border>
                <Label x:Name="StatusLabel" Grid.Column="1" Grid.Row="1" Content="What are you looking to do?" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="28" FontWeight="Regular" FontFamily="{StaticResource QuickSand}">
                    <Label.Foreground>
                        <SolidColorBrush Color="{DynamicResource TextLight}"/>
                    </Label.Foreground>
                </Label>
            </Grid>
            <Grid x:Name="GlassBar" Width="150" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Label x:Name="CurrentViewLabel" Content="Home" FontFamily="{StaticResource InkPen}" FontSize="28" Margin="26, 20, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="{DynamicResource GradientLight}"/>
                            <GradientStop Color="{DynamicResource GradientDark}" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
            </Grid>


            <Border Width="780" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="7" Margin="10, 70, 10, 10">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource BackgroundContrast}"/>
                </Border.Background>
                <Grid x:Name="FluidContainer">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Images/Watermark.png" Grid.Column="0" Opacity="0.1"/>
                    <Frame Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Frame>
                </Grid>
            </Border>

        </Grid>

    </Grid>
</Window>