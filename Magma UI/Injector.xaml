<Page xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  x:Name="InjectorPage" x:Class="Magma.Injector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:Magma"
      mc:Ignorable="d" 
      d:DesignHeight="336" d:DesignWidth="686"
      Title="Injector" Loaded="InjectorPage_Loaded" Initialized="InjectorPage_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="MAGMA" FontWeight="Bold" FontFamily="{StaticResource ResourceKey=QuickSand}" FontSize="64" RenderTransformOrigin="0.5,0.5" Margin="-123,58,471,138" Grid.Row="1" Background="{x:Null}" Foreground="#02FFFFFF">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="0 0 64 0" Padding="0" Height="45" Width="45" VerticalAlignment="Center" Foreground="#59E4E8F0" BorderBrush="{x:Null}" Content="{iconPacks:Material AlphaEBox, Height=25, Width=25}"/>
        <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="0 0 8 0" Padding="0" Height="45" Width="45" VerticalAlignment="Center" BorderBrush="{x:Null}" Content="{iconPacks:Material AlphaABox, Height=25, Width=25}">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource MagmaOrange}"/>
            </Button.Foreground>
        </Button>
        <Label Content="// VAC Bypass Active" FontWeight="Light" FontFamily="{StaticResource QuickSand}" Margin="55,3,0,284" HorizontalAlignment="Left" FontSize="32" Foreground="#26FFFFFF" Grid.RowSpan="2" Height="49" />
        <!-- Easy View for the DLL Injector -->
        <Grid x:Name="JurMom" Grid.Row="1" Height="280" Width="650" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Foreground="#FFE4E8F0" Grid.Column="2" FontSize="32" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QuickSand}" FontWeight="Light" Content="Game" Margin="37,10,0,0"/>
            <ComboBox x:Name="E_GameComboBox" Grid.Column="2" FontFamily="{StaticResource JBMono}" Padding="5 5 35 5" Margin="37,59,38,0" VerticalAlignment="Top" BorderBrush="#0FFFFFFF" >
                <ComboBoxItem IsSelected="True" Content="CS:GO"/>
            </ComboBox>
            <ui:Button Grid.Column="2" BorderThickness="0" Padding="0" Width="30" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="227,59,0,0" Height="31" Background="#00000000" Content="{iconPacks:BootstrapIcons ArrowRepeat, Height=15, Width=15}"/>

            <Label Foreground="#FFE4E8F0" Grid.Column="2" FontSize="32" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QuickSand}" FontWeight="Light" Content="Inject" Margin="37,133,0,0"/>
            <ui:Button x:Name="E_LaunchButton" Grid.Column="2" BorderThickness="1" Padding="0" Width="250" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="0,182,0,0" Height="31" Background="#0FFFFFFF" HorizontalAlignment="Center" FontFamily="{StaticResource QuickSand}" FontWeight="Bold"  FontSize="18" Content="LAUNCH CUSTOM" BorderBrush="#0FFFFFFF"/>
            <ui:Button x:Name="E_InfoButton" Grid.Column="2" BorderThickness="1" Padding="0" Width="100" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="37,223,0,0" Height="31" Background="#0FFFFFFF" Content="{iconPacks:FontAwesome QuestionSolid, Height=18, Width=18}" BorderBrush="#0FFFFFFF"/>
            <ui:Button x:Name="E_ConfigButton" Grid.Column="2" BorderThickness="01" Padding="0" Width="144" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="143,223,0,0" Height="31" Background="#0FFFFFFF" Content="{iconPacks:FontAwesome CogsSolid, Height=18, Width=18}" BorderBrush="#0FFFFFFF"/>
            <Grid Margin="24,59,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1.25*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="E_CheatContainer" Grid.Column="0">
                    <Image x:Name="E_CheatCanvas" Grid.Column="0" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="260" Source="/Images/Custom.png"/>
                    <Button x:Name="E_FavoriteButton" HorizontalAlignment="Right" Margin="0,0,8,20" Padding="0" VerticalAlignment="Bottom" Height="45" Width="45" Foreground="#33E4E8F0" Background="{x:Null}" BorderBrush="{x:Null}">
                        <iconPacks:FontAwesome Kind="HeartRegular" Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="E_BrowseConfigsButton" HorizontalAlignment="Right" Margin="0,0,63,20" Padding="0" VerticalAlignment="Bottom" Height="45" Width="45" Foreground="#33E4E8F0" Background="{x:Null}" BorderBrush="{x:Null}" >
                        <iconPacks:FontAwesome Kind="PasteSolid" Width="25" Height="25"/>
                    </Button>
                </Grid>
                <ui:Button x:Name="E_NextCheat" BorderThickness="0" Grid.Column="1" Foreground="#CCE4E8F0" Padding="0" Height="30" Margin="11,0,0,0" BorderBrush="{x:Null}" VerticalAlignment="Top" Width="30" Click="E_NextCheat_Click">
                    <iconPacks:FontAwesome Kind="AngleRightSolid"/>
                </ui:Button>
                <ui:Button x:Name="E_PrevCheat" BorderThickness="0" Grid.Column="1" Foreground="#CCE4E8F0" Padding="0" Width="30" Height="30" Margin="11,48,0,0" BorderBrush="{x:Null}" VerticalAlignment="Top" Click="E_PrevCheat_Click">
                    <iconPacks:FontAwesome Kind="AngleLeftSolid"/>
                </ui:Button>
                <ui:Button x:Name="E_AddCheat" BorderThickness="0" Grid.Column="1" Foreground="#CCE4E8F0" Padding="0" Width="30" Height="30" Margin="11,164,0,0" BorderBrush="{x:Null}" VerticalAlignment="Top">
                    <iconPacks:FontAwesome Kind="PlusSolid"/>
                </ui:Button>
            </Grid>
            <Label Foreground="#FFE4E8F0" FontSize="32" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QuickSand}" FontWeight="Light" Content="Available:" Margin="24,10,0,0"/>
        </Grid>


        <!-- Advanced View for the DLL Injector -->
        <Grid Visibility="Hidden"  x:Name="AdvancedGrid" Grid.Row="1" Height="280" Width="650" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Foreground="#FFE4E8F0" Grid.Column="1" FontSize="32" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QuickSand}" FontWeight="Bold" Content="Process" Margin="37,10,0,0"/>
            <ComboBox Grid.Column="1" FontFamily="{StaticResource JBMono}" Padding="5 5 35 5" Margin="37,59,38,0" VerticalAlignment="Top" >
                <ComboBoxItem IsSelected="True" Content="HELLO EVERYONE IT IS I THE REAL JIMMY MR BEAST"/>
            </ComboBox>
            <ui:Button Grid.Column="1" BorderThickness="0" Padding="0" Width="30" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="227,59,0,0" Height="31" Background="#00000000" Content="{iconPacks:BootstrapIcons ArrowRepeat, Height=15, Width=15}"/>

            <Label Foreground="#FFE4E8F0"  Grid.Column="1" FontSize="32" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QuickSand}" FontWeight="Bold" Content="Inject" Margin="37,133,0,0"/>
            <ui:Button Grid.Column="1" BorderThickness="1" Padding="0" Width="250" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="0,182,0,0" Height="31" Background="#0FFFFFFF" HorizontalAlignment="Center" Content="{iconPacks:Material Needle, Height=18, Width=18}"/>
            <ui:Button Grid.Column="1" BorderThickness="1" Padding="0" Width="100" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="37,223,0,0" Height="31" Background="#0FFFFFFF" Content="{iconPacks:FontAwesome QuestionSolid, Height=18, Width=18}"/>
            <ui:Button Grid.Column="1" BorderThickness="1" Padding="0" Width="144" Foreground="#CCE4E8F0" VerticalAlignment="Top" Margin="143,223,0,0" Height="31" Background="#0FFFFFFF" Content="{iconPacks:FontAwesome CogsSolid, Height=18, Width=18}"/>
            <Label Foreground="#FFE4E8F0" FontSize="32" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QuickSand}" FontWeight="Bold" Content="DLLs" Margin="38,10,0,0"/>
            <Grid Margin="38,59,38,26">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ListBox Margin="0,36,4,36" FontFamily="{StaticResource JBMono}" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <ListBox Margin="4,36,0,36" Grid.Column="2" FontFamily="{StaticResource JBMono}" Grid.ColumnSpan="1" Grid.RowSpan="2"/>

                <ListBox FontFamily="{StaticResource JBMono}" Grid.ColumnSpan="3" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,36,0,36" Grid.RowSpan="2">
                    <ListBoxItem Padding="0" Cursor="Hand" Margin="0">
                        <ListBoxItem.Background>
                            <SolidColorBrush Color="{DynamicResource MagmaOrange}"/>
                        </ListBoxItem.Background>
                        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Margin="0 4 0 0" FontSize="12" Grid.Column="0" Content="Gay.dll"/>
                            <Label Margin="16 4 0 0" FontSize="12" Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="32-Bit"/>
                        </Grid>
                    </ListBoxItem>
                    <ListBoxItem Padding="0" Cursor="Hand" Margin="0">
                        <ListBoxItem.Background>
                            <SolidColorBrush Color="{DynamicResource MagmaOrange}"/>
                        </ListBoxItem.Background>
                        <Grid Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontSize="12" Grid.Column="0" Content="Gay.dll"/>
                            <Label FontSize="12" Grid.Column="1" Margin="16 0 0 0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="32-Bit"/>
                        </Grid>
                    </ListBoxItem>
                    <ListBoxItem Padding="0" Cursor="Hand" Margin="0">
                        <ListBoxItem.Background>
                            <SolidColorBrush Color="{DynamicResource MagmaOrange}"/>
                        </ListBoxItem.Background>
                        <Grid Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontSize="12" Grid.Column="0" Content="Gay.dll"/>
                            <Label FontSize="12" Grid.Column="1" Margin="16 0 0 0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="32-Bit"/>
                        </Grid>
                    </ListBoxItem>


                </ListBox>
                <ui:Button HorizontalAlignment="Left" Margin="0,134,0,0" Grid.Row="1" VerticalAlignment="Bottom" Width="79" Grid.Column="0" Foreground="#CCE4E8F0" Content="{iconPacks:FontAwesome FileImportSolid}"/>
                <ui:Button HorizontalAlignment="Center" Margin="0,134,0,0" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Grid.Column="1" Foreground="#CCE4E8F0" Content="{iconPacks:FontAwesome TrashAltSolid}"/>
                <ui:Button HorizontalAlignment="Right" Margin="4,134,0,0" Grid.Row="1" VerticalAlignment="Bottom" Width="79" Grid.Column="2" Foreground="#CCE4E8F0" Content="{iconPacks:FontAwesome EraserSolid}"/>
                <Border Grid.ColumnSpan="2" BorderThickness="1" CornerRadius="4" HorizontalAlignment="Stretch" Margin="0,0,4,4" Background="#0FFFFFFF" VerticalAlignment="Stretch">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="#18FFFFFF" Offset="0.33"/>
                            <GradientStop Color="#12FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Label VerticalContentAlignment="Center" Margin="6 2 0 0" FontFamily="{StaticResource QuickSand}" FontSize="16" Foreground="#FFE4E8F0" Content="Name"/>
                </Border>
                <Border Grid.Column="2"  Grid.ColumnSpan="1" BorderThickness="1" CornerRadius="4" HorizontalAlignment="Stretch" Margin="4,0,0,4" Background="#0FFFFFFF" VerticalAlignment="Stretch">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="#18FFFFFF" Offset="0.33"/>
                            <GradientStop Color="#12FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Label VerticalContentAlignment="Center" Margin="6 2 0 0" FontFamily="{StaticResource QuickSand}" FontSize="16" Foreground="#FFE4E8F0" Content="Type"/>
                </Border>
            </Grid>
        </Grid>
        <ui:ProgressRing Cursor="Help" Visibility="Visible" x:Name="E_VTStatusRing" Opacity="0.6" IsIndeterminate="False" Progress="100" HorizontalAlignment="Left" Foreground="#FF5DF0A7" RenderTransformOrigin="0.5,0.5" Margin="2,-7,0,283" Grid.RowSpan="2">
            <ui:ProgressRing.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.45" ScaleY="0.45"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ui:ProgressRing.RenderTransform>
        </ui:ProgressRing>

        <!-- Magma Cloud Integration (Disabled due to Complexity) -->

